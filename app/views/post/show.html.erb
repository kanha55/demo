
<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>
 
<p>
  <strong>Text:</strong>
  <%= @post.description %>
</p>
 
<h2>Comments</h2>
<div id="comments">
  <% @post.comments.each do |comment| %>
    <%= render partial: "comments/comment", locals: {comment: comment} %>
  <% end %>
</div>
<h2>Add a comment:</h2>
<%= form_with(model: [ @post, @post.comments.new ],local:false) do |form| %>
  <p>
    <%= form.label :commenter %><br>
    <%= form.text_field :commenter,id:"commenter_id" %>
  </p>
  <p>
    <%= form.label :comment_text %><br>
    <%= form.text_area :comment,id:"comment_id" %>  
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>
 
<%= link_to 'Back', products_path %>
